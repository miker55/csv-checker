<a href="@Href" class="@GetButtonClasses()">
    @if (IconContent is not null)
    {
        @IconContent
    }
    @ChildContent
</a>

@code {
    [Parameter]
    public string Href { get; set; } = "/";

    [Parameter]
    public string Variant { get; set; } = "default";

    [Parameter]
    public RenderFragment? IconContent { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; } = default!;

    private string GetButtonClasses()
    {
        var baseClasses = "inline-flex items-center justify-center gap-2 px-5 py-3 rounded-xl font-semibold transition-all active:scale-95";
        
        return Variant.ToLowerInvariant() switch
        {
            "primary" => $"{baseClasses} bg-teal-600 text-white shadow-lg shadow-teal-600/20 hover:bg-teal-700",
            "secondary" => $"{baseClasses} bg-slate-900 text-white shadow-lg shadow-slate-900/20 hover:bg-slate-800",
            _ => $"{baseClasses} bg-white border border-slate-200 text-slate-700 hover:border-teal-300 hover:text-teal-700"
        };
    }
}

