<a href="@Href"
   class="group rounded-2xl border border-slate-200 bg-white p-6 hover:border-slate-300 hover:bg-slate-50">
    <div class="text-lg font-semibold text-slate-900 group-hover:text-slate-900">@Title</div>
    <P Size="small" AdditionalClasses="mt-2">
        @Description
    </P>
</a>

@code {
    [Parameter, EditorRequired]
    public string Href { get; set; } = default!;

    [Parameter, EditorRequired]
    public string Title { get; set; } = default!;

    [Parameter, EditorRequired]
    public string Description { get; set; } = default!;
}
