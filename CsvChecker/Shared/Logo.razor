@namespace CsvChecker.Shared

<div class="flex items-center gap-2">
    <svg class="@SvgClass"
         viewBox="0 0 24 24"
         fill="none"
         stroke="currentColor"
         stroke-width="2.5"
         stroke-linecap="round"
         stroke-linejoin="round"
         aria-hidden="true">
        <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
        <line x1="3" y1="9" x2="21" y2="9" />
        <line x1="9" y1="21" x2="9" y2="9" />
        <path d="M13 15l2 2 4-4" />
    </svg>

    <span class="@TextClass">CSV Checker</span>
</div>

@code {
    [Parameter] public string Size { get; set; } = "md"; // "sm" | "md" | "lg"

    private string SvgClass => Size switch
    {
        "sm" => "w-6 h-6 text-teal-600",
        "lg" => "w-12 h-12 text-teal-600",
        _ => "w-8 h-8 text-teal-600"
    };

    private string TextClass => Size switch
    {
        "lg" => "font-bold tracking-tight text-slate-900 text-2xl",
        _ => "font-bold tracking-tight text-slate-900 text-xl"
    };
}
