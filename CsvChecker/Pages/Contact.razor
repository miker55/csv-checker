@page "/contact"

<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-slate-900 tracking-tight">Contact</h1>

    <p class="mt-6 text-slate-600 leading-relaxed">
        Questions, bug reports, or feature requests? Send details (and a sample CSV if possible).
    </p>

    <div class="mt-8 p-6 rounded-2xl bg-slate-50 border border-slate-200">
        <p class="text-slate-700 font-medium">Email</p>
        <p class="text-slate-600 text-sm mt-1">
            Add your contact email address here.
        </p>
    </div>
</div>
